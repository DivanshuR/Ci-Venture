<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lbsim.shreya.student.MainActivity"
    android:background="@drawable/lbsim_orginal_sketch">

    <Button
        android:id="@+id/qb"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile"
        android:layout_marginTop="18dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:elevation="24dp"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:fontFamily="sans-serif"
        android:onClick="quesBank"
        android:text="Question Bank"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/profile"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:elevation="24dp"
        android:text="Profile"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/companies"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/test"
        android:layout_marginTop="18dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"

        android:elevation="24dp"
        android:onClick="companiesActivity"
        android:text="Companies"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/test"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/qb"
        android:layout_marginTop="18dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:elevation="24dp"
        android:onClick="testActivity"
        android:text="Test"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/gd"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/st"
        android:layout_marginTop="18dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:elevation="24dp"
        android:onClick="gd"
        android:text="GD Topics"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/st"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="18dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:elevation="24dp"
        android:onClick="sTopics"
        android:text="Study Topics"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/companies"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/feedbackForm"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="24dp"
        android:onClick="Feedbackact"
        android:text="Feedback"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/logout"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Log-Out"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
