<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:paddingTop="2dp"
    tools:context="com.lbsim.shreya.student.LoginActivity"
    android:background="@color/colorAccent" android:paddingRight="5dp" android:paddingLeft="5dp"
    android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/activity_login"
    xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ViewFlipper android:layout_height="180dp" android:layout_width="match_parent" android:id="@+id/simpleViewFlipper" android:elevation="1dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true"> </ViewFlipper>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Caption" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:textColorHighlight="@android:color/white" android:ellipsize="marquee" android:focusable="true" android:focusableInTouchMode="true" android:marqueeRepeatLimit="marquee_forever" android:scrollHorizontally="true" android:textColor="@color/text_color" android:textSize="17sp" android:textStyle="bold" android:gravity="left" android:singleLine="true" android:layout_marginTop="200dp" android:layout_alignParentTop="true" android:text="This is a Corporate Interface Day application in which we help you to achieve what you deserve."/>


    -<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/linearlayout"
    android:layout_marginTop="60dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true" android:layout_below="@+id/Caption" android:weightSum="1" android:orientation="vertical">

    <Button android:paddingTop="10dp"
        android:background="@drawable/rounded"
        android:paddingRight="20dp" android:layout_height="wrap_content"
        android:layout_width="match_parent" android:id="@+id/student" android:elevation="7dp" android:textSize="18sp" android:layout_marginTop="10dp" android:text="Student Area" android:textAllCaps="false" android:drawableRight="@drawable/arr" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" style="@android:style/Widget.Button.Toggle"/>

    <Button android:paddingTop="10dp" android:background="@drawable/rounded" android:paddingRight="20dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/faculty" android:elevation="7dp" android:textSize="18sp" android:layout_marginTop="10dp" android:text="Faculty Area" android:textAllCaps="false" android:drawableRight="@drawable/arr" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" style="@android:style/Widget.Button.Toggle"/>

    <Button android:paddingTop="10dp"
        android:background="@drawable/rounded" android:paddingRight="20dp"
        android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/contact" android:elevation="7dp" android:textSize="18sp" android:layout_marginTop="10dp" android:text="Contact-Us" android:textAllCaps="false" android:drawableRight="@drawable/arr" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" style="@android:style/Widget.Button.Toggle"/>

    <Button android:paddingTop="10dp"
        android:background="@drawable/rounded"
        android:paddingRight="20dp" android:layout_height="wrap_content"
        android:layout_width="match_parent" android:id="@+id/about"
        android:elevation="7dp" android:textSize="18sp" android:layout_marginTop="10dp" android:text="About-Us" android:textAllCaps="false" android:drawableRight="@drawable/arr" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" style="@android:style/Widget.Button.Toggle" android:layout_marginBottom="10dp"/>

    <ProgressBar android:layout_height="30dp"
        android:layout_width="30dp" android:id="@+id/progressBar"
        android:layout_marginBottom="20dp" android:visibility="gone" android:layout_gravity="center|bottom"/>

</LinearLayout>

    <com.google.android.gms.ads.AdView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adView"
        android:layout_gravity="center"
        ads:adUnitId="@string/banner_ad_unit_id" ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
